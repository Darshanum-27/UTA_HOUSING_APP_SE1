<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".arborselection">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="308dp" />

            <TextView
                android:id="@+id/abc"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#EFE7E7"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingLeft="30sp"
                android:paddingTop="20sp"
                android:paddingRight="30sp"
                android:text="Please Select Number of Rooms"
                android:textColor="#F4EDED"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_centerHorizontal="true"
                android:layout_margin="50dp"
                android:background="@android:drawable/btn_dropdown"></Spinner>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingLeft="30sp"
                android:paddingTop="20sp"
                android:text="Please select the type of Rooms"
                android:textColor="#FFFAFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/dropdown3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_centerHorizontal="true"
                android:layout_margin="50dp"
                android:background="@android:drawable/btn_dropdown"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:layout_marginRight="140sp"
                android:layout_marginBottom="40sp"
                android:onClick="nextpage"
                android:paddingLeft="0dp"
                android:text="SEARCH" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingLeft="30sp"
                android:paddingTop="20sp"
                android:paddingRight="30sp"
                android:text="About US"
                android:textColor="#ECE5E5"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="381dp"
                android:background="#4297BD"
                android:paddingLeft="20sp"
                android:paddingTop="30sp"
                android:text="
    HOUSING INFORMATION\n
    \t ________________________________\n
    University Housing Office:\n
    University Center Suite 150\n
    301 W First Street\n
    Arlington, Texas 76019\n\n

    CONTACT US\n
    \t ________________________________\n
    Housing: 817-272-2791\n
    Housing@uta.edu\n
    Apartment and Res Life: 817-272-2926\n
    livingoncampus@uta.edu\n

    "
                android:textColor="#F6F5F5"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>